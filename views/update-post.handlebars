{{#if logged_in}}
{{#each posts as |post| }}
<div class="flexy toCenter">

    <div id="updatePostFormHolder" class="fullPadding-15">
        <form>
            <div class="flexy toCenter fullMargin-15">
                <h2> Update you post below! </h2>
            </div>
            <div class="fullMargin-2">
                <div>Post Headline:</div>
                <textarea id="updated-headline" rows="1" cols="150">{{post.headline}}</textarea>
            </div>
            <div class="fullMargin-2">
                <div>Post Content:</div>
                <textarea id="updated-content" rows="5" cols="150">{{post.content}}</textarea>
            </div>
            <div class="flexy toCenter">
                <button name="{{post.id}}" id="save-submit" class="fullMargin-15" type="submit">Save!</button>
            </div>
        </form>
    </div>
</div>
{{/each}}

<script src="/js/update-post.js"></script>
{{/if}}

{{#unless logged_in}}
<div id="unlessLoggedIn">Session expired!  Please log in again!</div>
{{/unless}}